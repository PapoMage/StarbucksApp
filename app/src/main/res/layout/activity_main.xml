<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.starbucksapp.davinci.edu.ar.starbucksapp.MainActivity">

    <TextView
        android:id="@+id/welcome"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Starbucks App!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="351dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="In this aplication you will know more about the Starbucks Coffee."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.515" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="Enter your name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/nombreUser"
        android:layout_width="152dp"
        android:layout_height="46dp"
        android:ems="10"
        android:layout_below="@id/textView2"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="14dp" />


    <Button
        android:id="@+id/btncheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreUser"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="Explore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="146dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="141dp"
        android:layout_height="139dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

</android.support.constraint.ConstraintLayout>
